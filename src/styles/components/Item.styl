.card {
    background-color: white;
    border-radius: 3px;
    padding: 18px;
    margin: 8px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 500px;

    &:hover {
        background-color: red;
    }

    &__info {
        margin-left: 18px;
        width: 300px;
    }

    &__image {
        height: 100px;
        width: 100px;
    }

    &__title {
        font-weight: bold;
        font-size: 20px;
    }

    &__title {
        font-weight: bold;
        font-size: 20px;
    }

    &__buttons {
        width: 250px;

        & button {
            width :100%
            padding: 8px;
            font-size: 18px;
            margin: 8px;
        }
    }
}